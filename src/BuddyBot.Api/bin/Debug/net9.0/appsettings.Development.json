{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=BuddyBotDb_Dev;Username=postgres;Password=dev_password"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Database": 1,
    "KeyPrefix": "BuddyBot:Dev:"
  },
  "TelegramBot": {
    "Token": "YOUR_DEV_BOT_TOKEN_HERE",
    "WebhookUrl": "https://your-ngrok-url.ngrok.io/api/telegram/webhook"
  },
  "JWT": {
    "Key": "development-key-that-is-at-least-32-characters-long-for-testing-purposes-only",
    "ExpireMinutes": 1440
  },
  "FileStorage": {
    "Provider": "Local",
    "Local": {
      "BasePath": "wwwroot/uploads/dev"
    }
  },
  "Email": {
    "Provider": "Smtp",
    "Smtp": {
      "Host": "localhost",
      "Port": 1025,
      "EnableSsl": false,
      "Username": "test@localhost",
      "Password": "test"
    }
  },
  "BackgroundJobs": {
    "DashboardEnabled": true,
    "DashboardPath": "/hangfire",
    "WorkerCount": 2
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "https://localhost:3000",
    "https://localhost:3001"
  ]
}